{% extends 'summary_manager/layout.html.twig' %}

{% block summary_content %}
<section class="l__wrapper--medium">

    <h2>Éditer l'expérience</h2>

    <div class="l__row l__row--h-stretch l__row--top l__tablet--col b__nudge--bottom-large">
        {{ form_start(experience_form) }}

            {{ form_errors(experience_form) }}

            {{ form_row(experience_form.company, { label: 'Organisation' }) }}
            {{ form_row(experience_form.website, { label: 'Site internet de l\'organisation' }) }}
            {{ form_row(experience_form.position, { label: 'Poste' }) }}
            {{ form_row(experience_form.company_facebook_page, { label: 'Page Facebook de l\'organisation' }) }}
            {{ form_row(experience_form.location, { label: 'Ville' }) }}
            {{ form_row(experience_form.company_twitter_nickname, { label: 'Compte Twitter de l\'organisation' }) }}
            {{ form_row(experience_form.started_at, { label: 'Début' }) }}
            {{ form_row(experience_form.ended_at, { label: 'Fin' }) }}
            {{ form_row(experience_form.on_going, { label: 'J\'y travaille actuellement' }) }}
            {{ form_row(experience_form.contract, { label: 'Type de contrat' }) }}
            {{ form_row(experience_form.duration, { label: 'Statut' }) }}
            {{ form_row(experience_form.description, { label: 'Description du poste' }) }}

            {% if experience_form.display_order.vars.choices is defined %}
                {{ form_row(experience_form.display_order, { label: 'Position dans la liste des expériences' }) }}
            {% else %}
                {{ form_widget(experience_form.display_order) }}
            {% endif %}

        {{ form_end(experience_form) }}

        {% if experience_form.vars.data and not experience_form.vars.data.new %}
            {{ delete_form(path('app_summary_manager_remove_experience', { id: experience_form.vars.data.id }), constant('AppBundle\\Summary\\SummaryManager::DELETE_EXPERIENCE_TOKEN')) }}
        {% endif %}
        <a href="{{ path('app_summary_manager_index') }}">
            Retourner au CV
        </a>
    </div>

</section>
{% endblock %}
